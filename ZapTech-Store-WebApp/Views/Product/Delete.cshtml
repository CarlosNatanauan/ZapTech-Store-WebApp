@model ProductDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4">
        <h2 class="text-center mb-4">Confirm Deletion</h2>

        <form method="post" asp-action="DeleteConfirmed">
            <!-- Hidden field to pass the ID -->
            <input type="hidden" name="id" value="@ViewData["ProductId"]" />

            <div class="mb-3">
                <label class="form-label">Product ID</label>
                <p class="form-control-plaintext">@ViewData["ProductId"]</p>
            </div>

            <div class="mb-3">
                <label class="form-label">Product Name</label>
                <p class="form-control-plaintext">@Model.Name</p>
            </div>

            <div class="mb-3">
                <p>Are you sure you want to delete this product?</p>
            </div>

            <div class="row">
                <div class="col-sm-6 d-grid">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
                <div class="col-sm-6 d-grid">
                    <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
